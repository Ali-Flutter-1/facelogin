# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end

  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end


post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Flutter hook available in older/newer versions
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      # For M1 Macs: exclude x86_64 for simulator, allow arm64 for both simulator and device
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'x86_64'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphoneos*]'] = ''
      # Ensure arm64 is included for both simulator and device
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
      # Set valid architectures explicitly
      if config.build_settings['VALID_ARCHS']
        config.build_settings['VALID_ARCHS'] = 'arm64'
      end
      # Enable modules for proper @import support
      config.build_settings['DEFINES_MODULE'] = 'YES'
      config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
      config.build_settings['SWIFT_VERSION'] = '5.0'
      # Ensure framework search paths include Pods
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] ||= ['$(inherited)']
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '$(PODS_ROOT)/../Flutter'
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '$(PODS_CONFIGURATION_BUILD_DIR)'
      # Ensure module map search paths are set
      config.build_settings['MODULEMAP_FILE'] ||= '$(PODS_TARGET_SRCROOT)/camera_avfoundation.modulemap' if target.name == 'camera_avfoundation'
    end
  end
  
  # Also update the Runner project build settings
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'x86_64'
    config.build_settings['EXCLUDED_ARCHS[sdk=iphoneos*]'] = ''
  end
  
  # Update Runner target build settings to ensure modules can be found
  runner_target = installer.pods_project.targets.find { |t| t.name == 'Runner' }
  if runner_target.nil?
    # Runner is in the main project, not pods project, so we need to update it differently
    # The xcconfig files should handle this, but let's ensure import paths are correct
  end
end


